{
  "name": "humble-bundle-nice-downloader",
  "version": "0.0.0",
  "description": "Bulk downloader for Humble Bundle",
  "main": "src/index.ts",
  "repository": "https://github.com/aljazmc/humble-bundle-nice-downloader",
  "author": "aljazmc <mlinaric.aljaz@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-esbuild": "^0.3.0",
    "jiti": "^2.4.2",
    "prettier": "^3.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0"
  },
  "scripts": {
    "build": "yarn mk-dir && yarn cp-icons && esbuild src/*.* --bundle --loader:.css=copy --loader:.json=copy --loader:.html=copy --outdir=${npm_package_name}",
    "build-watch": "yarn mk-dir && yarn cp-icons && esbuild src/*.* --bundle --loader:.css=copy --loader:.json=copy --loader:.html=copy --watch --outdir=${npm_package_name}",
    "clean": "rm -rf ${npm_package_name}",
    "cp-icons": "cp -aR src/icons ${npm_package_name}/icons",
    "mk-dir": "mkdir -p ${npm_package_name}",
    "test": "jest"
  }
}
